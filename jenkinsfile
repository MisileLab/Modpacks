
pipeline {
  agent { docker { image "crazymax/7zip:edge" }, label { "pi" } }
  stages {
    stage('zip') {
      steps {
        dir('modpacks') {
          sh '''
          7za a -t7z basiccraft.7z BasicCraft/mods/*
          7za a -t7z somemechaincs.7z SomeMechanics/mods/*
          '''
          archiveArtifacts 'basiccraft.7z'
          archiveArtifacts 'somemechaincs.7z'
        }
      }
    }
  }
}
