
pipeline {
  agent any
  stages {
    stage('zip') {
      steps {
        dir('modpacks') {
          sh '7zz a -t7z basiccraft.7z BasicCraft/mods/*'
          sh '7zz a -t7z somemechaincs.7z SomeMechanics/mods/*'
          archiveArtifacts 'basiccraft.7z'
          archiveArtifacts 'somemechaincs.7z'
        }
      }
    }
  }
}
